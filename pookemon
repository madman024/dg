show_bulbasaur() {
    clear
    show_banner
    echo -e "\n${GREEN}=== Bulbasaur ===${NC}"
    # ADD BULBASAUR ASCII ART HERE
    handle_display_return
}

show_squirtle() {
    clear
    show_banner
    echo -e "\n${BLUE}=== Squirtle ===${NC}"
    # ADD SQUIRTLE ASCII ART HERE
    handle_display_return
}

show_mewtwo() {
    clear
    show_banner
    echo -e "\n${PURPLE}=== Mewtwo ===${NC}"
    # ADD MEWTWO ASCII ART HERE
    handle_display_return
}

# Function to handle return to menu
handle_display_return() {
    echo -e "\nPress ${GREEN}[Enter]${NC} to return to menu..."
    read -r
}

# Function to show about information
show_about() {
    dialog --title "About" \
           --backtitle "Pokemon ASCII Art Viewer" \
           --msgbox "\nPokemon ASCII Art Viewer v1.0\n\nA simple terminal-based viewer for Pokemon ASCII art.\n\nUse arrow keys to navigate and Enter to select." \
           12 45
}

# Main menu function
show_menu() {
    while true; do
        # Clear screen and show banner before menu
        clear
        show_banner
        
        exec 3>&1
        selection=$(dialog \
            --backtitle "Pokemon ASCII Art Viewer" \
            --title "[ Select a Pokemon ]" \
            --clear \
            --cancel-label "Exit" \
            --menu "\nUse arrow keys and Enter to select:" $MENU_HEIGHT $MENU_WIDTH $LIST_HEIGHT \
            "1" "► Pikachu" \
            "2" "► Charmander" \
            "3" "► Bulbasaur" \
            "4" "► Squirtle" \
            "5" "► Mewtwo" \
            "6" "About" \
            "7" "Exit" \
            2>&1 1>&3)
        exit_status=$?
        exec 3>&-

        case $exit_status in
            1|255) # ESC or Cancel pressed
                clear
                show_banner
                echo -e "\n${GREEN}Thanks for using Pokemon ASCII Art Viewer!${NC}"
                sleep 1
                clear
                exit 0
                ;;
        esac

        case $selection in
            1) show_pikachu ;;
            2) show_charmander ;;
            3) show_bulbasaur ;;
            4) show_squirtle ;;
            5) show_mewtwo ;;
            6) show_about ;;
            7) 
                clear
                show_banner
                echo -e "\n${GREEN}Thanks for using Pokemon ASCII Art Viewer!${NC}"
                sleep 1
                clear
                exit 0
                ;;
        esac
    done
}

# Cleanup function
cleanup() {
    clear
    show_banner
    echo -e "\n${RED}Program interrupted.${NC}"
    sleep 1
    clear
    exit 1
}

# Main script execution
main() {
    # Set up trap for cleanup
    trap cleanup SIGINT SIGTERM

    # Clear screen
    clear

    # Show banner
    show_banner

    # Check for required programs
    check_dependencies

    # Show loading animation
    show_loading

    # Start the menu
    show_menu
}

# Run the script
main