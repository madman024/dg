#!/bin/bash

# Colors for terminal output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Configuration variables
MENU_HEIGHT=15
MENU_WIDTH=50
LIST_HEIGHT=8

# Function to display title banner
show_banner() {
    clear
    cat << "EOF"
╔═══════════════════════════════════════════════════════════════════╗
║  ██████╗  ██████╗ ██╗  ██╗███████╗███╗   ███╗ ██████╗ ███╗   ██╗║
║  ██╔══██╗██╔═══██╗██║ ██╔╝██╔════╝████╗ ████║██╔═══██╗████╗  ██║║
║  ██████╔╝██║   ██║█████╔╝ █████╗  ██╔████╔██║██║   ██║██╔██╗ ██║║
║  ██╔═══╝ ██║   ██║██╔═██╗ ██╔══╝  ██║╚██╔╝██║██║   ██║██║╚██╗██║║
║  ██║     ╚██████╔╝██║  ██╗███████╗██║ ╚═╝ ██║╚██████╔╝██║ ╚████║║
║  ╚═╝      ╚═════╝ ╚═╝  ╚═╝╚══════╝╚═╝     ╚═╝ ╚═════╝ ╚═╝  ╚═══╝║
╚═══════════════════════════════════════════════════════════════════╝
EOF
    sleep 2  # Show banner for 2 seconds
}

# Function to check dependencies
check_dependencies() {
    local missing_deps=()
    
    if ! command -v dialog &> /dev/null; then
        missing_deps+=("dialog")
    fi
    
    if [ ${#missing_deps[@]} -ne 0 ]; then
        echo -e "${RED}Error: Missing required dependencies${NC}"
        echo "Please install the following packages:"
        for dep in "${missing_deps[@]}"; do
            echo "  - $dep"
        done
        echo -e "\nOn Debian/Ubuntu:"
        echo "sudo apt-get install ${missing_deps[*]}"
        echo -e "\nOn RedHat/Fedora:"
        echo "sudo dnf install ${missing_deps[*]}"
        exit 1
    fi
}

# Function to display loading animation
show_loading() {
    echo -ne "${YELLOW}Initializing${NC}"
    for i in {1..3}; do
        echo -ne "${YELLOW}.${NC}"
        sleep 0.5
    done
    echo
}

